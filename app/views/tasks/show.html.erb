
<div class= "text-center padded">
  <h1><%= @task.name %></h1>
  <p><%= @task.state %></p>
  <%= link_to "View all tasks", tasks_path, class: "btn btn-primary" %>
  <%= link_to "Edit", edit_task_path(@task), class: "btn btn-primary" %>
  <%= link_to "Delete", task_path(@task), method: :delete, class: "btn btn-primary"%>
  <%= link_to "Create a new task ", new_task_path(@task), class: "btn btn-primary" %>
</div>

